/*
 * Implementation of CiviCRM _civicrm_post hook
 *
 * http://wiki.civicrm.org/confluence/display/CRMDOC33/CiviCRM+hook+specification#CiviCRMhookspecification-hookcivicrmpost
 */
function gift_memberships_civicrm_post( $op, $objectName, $objectId, &$objectRef ) {
  if($objectName == 'Individual'){
    // this is the only point we have the honor_contact id so we grab it here & stash it
    gift_memberships_contribution_singleton(array(),$objectRef);
  }
  if($objectName == 'Address'){
    //CRM-10287 address is an array = wrong & might change so let's check
    if(is_array($objectRef)){
      $objectArray = null;
      if($op == 'Edit'){
        $objectArray = $objectRef;
      }
      if($objectRef['location_type_id'] != 5){
        gift_memberships_address_singleton($objectRef['id'], $objectArray);
      }
    }elseif($objectRef->location_type_id != 5){
      $objectArray = null;
      if($op == 'Edit'){
        $objectArray = array($objectRef);
      }
      // this is the address we want to re-assign if honor contact is set - we'll stash the id
      // note it will only be retrieved if a profile with honor contact is saved followed by
      // a call to membership so chould be ok-ish
      gift_memberships_address_singleton($objectRef->id, $objectArray);
    }
  }
}

